{
  "features": {
    "inline_completion_provider": "none"
  },
  "relative_line_numbers": true,
  "always_treat_brackets_as_autoclosed": true,
  "font_family": "JetBrains Mono",
  "font_features": true,
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": "Catppuccin Frapp√©",
  "tab_size": 2,
  "show_wrap_guides": true,
  "format_on_save": "language_server",
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "terminal": {
    "font_family": "JetBrains Mono",
    "font_size": 16
  },
  "scrollbar": {
    "git_diff": false,
    "show": "never"
  },
  "git": {
    "git_gutter": "tracked_files",
  },
  "preferences": {
    "includeInlayParameterNameHints": "all",
    "includeInlayParameterNameHintsWhenArgumentMatchesName": true,
    "includeInlayFunctionParameterTypeHints": true,
    "includeInlayVariableTypeHints": true,
    "includeInlayVariableTypeHintsWhenTypeMatchesName": true,
    "includeInlayPropertyDeclarationTypeHints": true,
    "includeInlayFunctionLikeReturnTypeHints": true,
    "includeInlayEnumMemberValueHints": true
  },
  "experimental.theme_overrides": {
    "background.appearance": "blurred",
    "background": "#0f0f0ff0",
    "editor.background": "#00000000",
    "panel.background": "#00000000",
    "editor.gutter.background": "#00000000",
    "tab_bar.background": "#00000000",
    "terminal.background": "#00000000",
    "toolbar.background": "#00000000",
    "tab.active_background": "#28282820",
    "tab.inactive_background": "#00000000",
    "status_bar.background": "#000000f1",
    "title_bar.background": "#000000f1",
    "border.variant": "#f5c2e7f0",
    "scrollbar.track.border": "#000000f0",
    "editor.active_line.background": "#00000000"
  },
  "languages": {
    "TypeScript": {
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "inlay_hints": {
        // "enabled": true,
        "show_parameter_hints": true,
        "show_other_hints": true,
        "show_type_hints": true
      }
    },
    "TSX": {
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fixAll.eslint": true
      },
      "inlay_hints": {
        // "enabled": true,
        // "show_parameter_hints": false,
        // "show_other_hints": true,
        // "show_type_hints": true
      }
    }
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": [
          "class",
          "className",
          "ngClass",
          "styles"
        ]
      }
    }
  },
  "formatter": {
    "external": {
      "command": "./node_modules/@biomejs/biome/bin/biome",
      "arguments": [
        "format",
        "--write",
        "--stdin-file-path",
        "{buffer_path}"
      ]
    }
  },
  "file_types": {
    "Dockerfile": [
      "Dockerfile",
      "Dockerfile.*"
    ],
    "JSON": [
      "json",
      "jsonc",
      "*.code-snippets"
    ]
  }
}
